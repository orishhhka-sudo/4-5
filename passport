class Passport {
  String series;
  String number;
  String fullName;

  Passport({
    required this.series,
    required this.number,
    required this.fullName,
  }) {
    if (!RegExp(r'^\d{4}$').hasMatch(series)) {
      throw ArgumentError('Серия паспорта — 4 цифры');
    }
    if (!RegExp(r'^\d{6}$').hasMatch(number)) {
      throw ArgumentError('Номер паспорта — 6 цифр');
    }
    if (fullName.trim().isEmpty) {
      throw ArgumentError('ФИО не может быть пустым');
    }
  }

  Map<String, dynamic> toJson() => {
        'series': series,
        'number': number,
        'fullName': fullName,
      };

  factory Passport.fromJson(Map<String, dynamic> j) => Passport(
        series: j['series'],
        number: j['number'],
        fullName: j['fullName'],
      );
}
